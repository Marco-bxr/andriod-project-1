<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".BUGATTI">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="319dp"
            android:layout_marginBottom="249dp"
            android:background="@drawable/bmw" />

        <Button
            android:id="@+id/button11"
            android:layout_width="89dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="390dp"
            android:backgroundTint="#070707"
            android:text="PAY HERE"
            android:textColor="#FAF7F7" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="399dp"
            android:text="$300 PER HOUR"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="449dp"
            android:text="This BMW will be availabe from 7am to 7pm "
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="480dp"
            android:backgroundTint="#070707"
            android:text="BACK"
            android:textColor="#FAF7F7" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>